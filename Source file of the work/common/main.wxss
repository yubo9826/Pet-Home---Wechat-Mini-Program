:root {
  --primary-color: #3ecf8e;
  --secondary-color: #54b4d3;
  --background-color: #f6f8fa;
  --text-primary: #2c3e50;
  --text-secondary: #95a5a6;
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --border-radius: 8px;
  --box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08)
}

::-webkit-scrollbar {
  width: 6px
}

::-webkit-scrollbar-thumb {
  background: var(--text-secondary);
  border-radius: 3px
}

page::after {
  position: fixed;
  content: '';
  left: -1000px;
  top: -1000px;
  -webkit-animation: shadow-preload .1s;
  -webkit-animation-delay: 3s;
  animation: shadow-preload .1s;
  animation-delay: 3s
}

@-webkit-keyframes shadow-preload {
  0% {
    background-image: url(https://cdn1.dcloud.net.cn/517a4534513059354f513d3d/img/shadow-grey.png)
  }

  100% {
    background-image: url(https://cdn1.dcloud.net.cn/517a4534513059354f513d3d/img/shadow-grey.png)
  }
}

@keyframes shadow-preload {
  0% {
    background-image: url(https://cdn1.dcloud.net.cn/517a4534513059354f513d3d/img/shadow-grey.png)
  }

  100% {
    background-image: url(https://cdn1.dcloud.net.cn/517a4534513059354f513d3d/img/shadow-grey.png)
  }
}