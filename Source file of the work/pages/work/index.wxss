.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5
}

.tabs {
  background: #fff;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100
}

.tabs .tabs-list {
  display: flex;
  justify-content: space-around;
  padding: 0
}

.tabs .tab-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  position: relative;
  flex: 1;
  text-align: center
}

.tabs .tab-item.active {
  color: #ff4d4f;
  font-weight: 700
}

.tabs .tab-item.active::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 4rpx;
  background: #ff4d4f;
  border-radius: 2rpx
}

.service-list {
  flex: 1;
  padding: 20rpx
}

.service-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden
}

.service-item .service-image {
  width: 100%;
  height: 300rpx
}

.service-item .service-info {
  padding: 20rpx
}

.service-item .service-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx
}

.service-item .service-name {
  font-size: 32rpx;
  font-weight: 700
}

.service-item .service-price {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: 700
}

.service-item .service-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block
}

.service-item .service-footer {
  display: flex;
  justify-content: space-between;
  align-items: center
}

.service-item .service-tags {
  display: flex;
  flex-wrap: wrap
}

.service-item .service-tags .tag {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx
}

.service-item .book-btn {
  background: #ff4d4f;
  color: #fff;
  border: none
}

.service-item .book-btn:active {
  opacity: .8
}