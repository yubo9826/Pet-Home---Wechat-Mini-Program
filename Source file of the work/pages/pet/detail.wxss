.container {
  padding-bottom: 120rpx
}

.swiper {
  height: 500rpx
}

.swiper .slide-image {
  width: 100%;
  height: 100%
}

.info-section {
  padding: 30rpx;
  background: #fff
}

.info-section .pet-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx
}

.info-section .pet-tags {
  margin-bottom: 20rpx
}

.info-section .pet-tags .tag {
  display: inline-block;
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666
}

.info-section .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6
}

.detail-section,
.health-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff
}

.detail-section .section-title,
.health-section .section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 30rpx
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5
}

.detail-item .label {
  color: #999;
  font-size: 28rpx
}

.detail-item .value {
  color: #333;
  font-size: 28rpx
}

.health-list .health-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5
}

.health-list .health-item .date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx
}

.health-list .health-item .record {
  font-size: 28rpx;
  color: #333
}

.contact-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, .05)
}

.contact-btn button {
  background: #ff4d4f
}

.contact-btn button:active {
  opacity: .8
}