<view class="container">
  <swiper class="swiper" circular="{{true}}" indicator-dots="{{true}}" autoplay="{{true}}">
    <block wx:for="{{pet.images}}" wx:for-item="img" wx:for-index="index" wx:key="index">
      <swiper-item>
        <image class="slide-image" src="{{img}}" mode="aspectFill"></image>
      </swiper-item>
    </block>
  </swiper>
  <view class="info-section">
    <view class="pet-name">{{pet.name}}</view>
    <view class="pet-tags"><text class="tag">{{pet.breed}}</text><text class="tag">{{pet.age+"岁"}}</text><text class="tag">{{pet.gender}}</text></view>
    <view class="description">{{pet.description}}</view>
  </view>
  <view class="detail-section">
    <view class="section-title">详细信息</view>
    <view class="detail-item"><text class="label">品种</text><text class="value">{{pet.breed}}</text></view>
    <view class="detail-item"><text class="label">年龄</text><text class="value">{{pet.age+"岁"}}</text></view>
    <view class="detail-item"><text class="label">性别</text><text class="value">{{pet.gender}}</text></view>
    <view class="detail-item"><text class="label">体重</text><text class="value">{{pet.weight+"kg"}}</text></view>
    <view class="detail-item"><text class="label">疫苗</text><text class="value">{{pet.vaccine?"已接种":"未接种"}}</text></view>
  </view>
  <view class="health-section">
    <view class="section-title">健康记录</view>
    <view class="health-list">
      <block wx:for="{{pet.healthRecords}}" wx:for-item="item" wx:for-index="index" wx:key="index">
        <view class="health-item">
          <view class="date">{{item.date}}</view>
          <view class="record">{{item.description}}</view>
        </view>
      </block>
    </view>
  </view>
  <view class="contact-btn"><button type="primary" data-event-opts="{{[['tap',[['contactOwner',['$event']]]]]}}" bindtap="__e">联系主人</button></view>
</view>