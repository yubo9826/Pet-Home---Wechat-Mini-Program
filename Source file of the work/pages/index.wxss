.container {
  padding: 20rpx;
  background: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column
}

.search-bar {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
  background: #f5f5f5;
  padding: 20rpx 0
}

.content-scroll {
  flex: 1;
  height: 0
}

.banner-container {
  position: relative;
  margin-bottom: 30rpx
}

.banner {
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden
}

.banner-image {
  width: 100%;
  height: 100%
}

.category-section {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx
}

.category-name {
  font-size: 24rpx;
  color: #333
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333
}

.more {
  font-size: 24rpx;
  color: #999
}

.activity-scroll {
  width: 100%
}

.activity-list {
  display: flex;
  padding: 10rpx 0
}

.activity-item {
  margin-right: 20rpx;
  width: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, .1)
}

.activity-image {
  width: 400rpx;
  height: 200rpx
}

.activity-info {
  padding: 20rpx
}

.activity-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
  display: block
}

.activity-desc {
  font-size: 24rpx;
  color: #666
}

.pet-list .pet-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee
}

.pet-list .pet-item:last-child {
  border-bottom: none
}

.pet-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx
}

.pet-info {
  flex: 1;
  padding-left: 20rpx
}

.pet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx
}

.pet-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333
}

.pet-age {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx
}

.pet-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block
}

.pet-tags {
  display: flex;
  flex-wrap: wrap
}

.tag {
  font-size: 24rpx;
  color: #ff4d4f;
  background: rgba(255, 77, 79, .1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 8rpx
}

.loading-more {
  padding: 20rpx 0;
  text-align: center
}

:deep(.uni-swiper-dots-horizontal) {
  bottom: 20rpx
}

:deep(.uni-swiper-dot) {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin: 0 8rpx;
  transition: all .2s
}

:deep(.uni-swiper-dot-active) {
  width: 24rpx
}

.copyright {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 8rpx;
  z-index: 1
}